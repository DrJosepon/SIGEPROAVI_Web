@{
    ViewBag.Title = "Usuario";
}

<h2>Usuarios</h2>

@section scripts {
<script src="~/Scripts/js/Usuario.js"></script>
}
<div ng-app="usuarioModulo" id="body">
    <div ng-controller="usuarioCtrl">

        <table class="table table-striped" at-table at-paginated at-list="usuariosDatos" at-config="config">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td at-implicit at-sortable at-attribute="Nombres"></td>
                    <td at-implicit at-sortable at-attribute="ApellidoPaterno"></td>
                    <td at-implicit at-sortable at-attribute="ApellidoMaterno"></td>
                    <td at-implicit at-sortable at-attribute="Usuario"></td>
                    <td at-implicit at-sortable at-attribute="DescripcionTipoUsuario"></td>
                    <td>
                        <button class="btn btn-default btn-xs" ng-model="$scope.Usuario"
                                ng-click="editar(usuariosDatos[$index])">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        <at-pagination at-list="usuariosDatos" at-config="config"></at-pagination>

        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Usuario.IdSegUsuario != '' ">
            <div>
                <h2>Modificar Usuario</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Usuario.IdSegUsuario" />
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputEmail1">Nombres</label>
                    <input type="text" class="form-control" data-ng-model="Usuario.Nombres">
                </div>
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputPassword1">Apellido Paterno</label>
                    <input type="text" class="form-control" data-ng-model="Usuario.ApellidoPaterno">
                </div>
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputPassword1">Apellido Materno</label>
                    <input type="text" class="form-control" data-ng-model="Usuario.ApellidoMaterno">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputPassword1">Tipo de Usuario</label>
                    <select class="form-control" name="repeatSelect" id="repeatSelect" data-ng-model="Usuario.IdSegTipoUsuario">
                        <option value="">---Elija un Tipo---</option>
                        <option ng-repeat="option in tipousuarioDatos" value="{{option.IdSegTipoUsuario}}">{{option.Descripcion}}</option>
                    </select>
                </div>
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputPassword1">Usuario</label>
                    <input disabled type="text" class="form-control" data-ng-model="Usuario.Usuario">
                </div>
                <div class="form-group col-xs-12 col-md-4">
                    <label for="exampleInputPassword1">Clave</label>
                    <input type="password" class="form-control" data-ng-model="Usuario.Clave">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-xs-12">
                    <button data-ng-click="modificar()" class="btn btn-default">Modificar</button>
                    <button class="btn btn-default" data-ng-click="cancelar()">Cancelar</button>
                </div>
            </div>
        </div>

        <div ng-hide="Usuario.IdSegUsuario != '' ">
            <div>
                <h2>Agregar Nuevo Usuario</h2>
            </div>

            <form @*ng-submit="guardar()" *@>
                <div class="row">
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputEmail1">Nombres</label>
                        <input type="text" class="form-control" data-ng-model="Usuario.Nombres">
                    </div>
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputPassword1">Apellido Paterno</label>
                        <input type="text" class="form-control" data-ng-model="Usuario.ApellidoPaterno">
                    </div>
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputPassword1">Apellido Materno</label>
                        <input type="text" class="form-control" data-ng-model="Usuario.ApellidoMaterno">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputPassword1">Tipo de Usuario</label>
                        <select class="form-control" name="repeatSelect" id="repeatSelect" data-ng-model="Usuario.IdSegTipoUsuario">
                            <option value="">---Elija un Tipo---</option>
                            <option ng-repeat="option in tipousuarioDatos" value="{{option.IdSegTipoUsuario}}">{{option.Descripcion}}</option>
                        </select>
                    </div>
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputPassword1">Usuario</label>
                        <input type="text" class="form-control" data-ng-model="Usuario.Usuario">
                    </div>
                    <div class="form-group col-xs-12 col-md-4">
                        <label for="exampleInputPassword1">Clave</label>
                        <input type="password" class="form-control" data-ng-model="Usuario.Clave">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-12">
                        <button data-ng-click="guardar()" class="btn btn-default">Agregar</button>
                        <button class="btn btn-default" data-ng-click="limpiar()">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>